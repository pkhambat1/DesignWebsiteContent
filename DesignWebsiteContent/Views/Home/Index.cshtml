@model DesignWebsiteContent.Models.InputOutput

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h2>Home</h2>
        <div class="col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Input)
                @Html.TextAreaFor(m => m.Input, new { @class = "form-control", @id = "input", @rows = "10", @cols = "20" })
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-success" id="convert">Convert</button>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Output)
                @Html.TextAreaFor(m => m.Output, new { @class = "form-control", @id = "output", @rows = "10", @cols = "20" })
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-dark" id="copy">Copy</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
