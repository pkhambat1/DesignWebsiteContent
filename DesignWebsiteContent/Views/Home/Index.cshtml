@model DesignWebsiteContent.Models.InputOutput

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <h2>@Html.LabelFor(m => m.ContentCarousel)</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-12">
            <h4>Design Project</h4>
        </div>
        <div class="col-md-6 col-12">
            <div class="slide">
                <div class="form-group">
                    @Html.LabelFor(m => m.ContentCarousel.FilePath)

                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">img/</div>
                        </div>
                        @Html.TextBoxFor(m => m.ContentCarousel.FilePath, new { @class = "form-control filePath" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="slide">
                <div class="form-group">
                    @Html.LabelFor(m => m.ContentCarousel.Thumbnail)
                    <div class="thumbnail row">
                        <div class="col-md-6 col-12">
                            <input type="file" class="form-control-file">
                        </div>
                        <div class="input-group mb-2 col-md-6 col-12">
                            <div class="input-group-prepend">
                                <div class="input-group-text">/</div>
                            </div>
                            @Html.TextBoxFor(m => m.ContentCarousel.Thumbnail, new { @class = "form-control", @disabled = true })
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="slide">
                <div class="form-group">
                    @Html.LabelFor(m => m.ContentCarousel.Title)
                    @Html.TextBoxFor(m => m.ContentCarousel.Title, new { @class = "form-control titleValue" })
                    @Html.LabelFor(m => m.ContentCarousel.Caption)
                    @Html.TextAreaFor(m => m.ContentCarousel.Caption, new { @class = "form-control caption", @rows = "3" })
                </div>
            </div>
        </div>
    </div>

    <div class="slidePair mb-3">
        <div class="row">
            @for(int i = 0; i < 2; i++) {
                <div class="col-md-6 col-12">
                    <div class="slide">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ContentCarousel.Slides.FirstOrDefault().Image)
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <input type="file" class="form-control-file">
                                </div>
                                <div class="input-group mb-2 col-md-6 col-12">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">/</div>
                                    </div>
                                    @Html.TextBoxFor(m => m.ContentCarousel.Slides.FirstOrDefault().Image, new { @class = "form-control image", @disabled = true })
                                </div>

                                <div class="textBox col-12">
                                    @Html.LabelFor(m => m.ContentCarousel.Slides.FirstOrDefault().TextBox)
                                    @Html.TextAreaFor(m => m.ContentCarousel.Slides.FirstOrDefault().TextBox, new { @class = "form-control textBox", @rows = "3" })
                                </div>
                            </div>
                            <div class="extraInputs"></div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <button class="btn btn-dark addImage">+ Image</button>
                                <button class="btn btn-dark addTextBox">+ TextBox</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
    <div class="extraSlides"></div>
    <div class="row mb-3">
        <div class="col-12 text-right">
            <button class="btn btn-dark" id="addSlidePair">+ 2 Slides</button>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <button type="button" class="btn btn-success" id="generate">Generate HTML</button>
            </div>
        </div>
    </div>
    <hr>
</div>
</div>

<div class="container">
    <div class="row justify-content-middle">
        <div class="col-12">
            <div class="form-group">
                <h4>@Html.LabelFor(m => m.Output)</h4>
                @Html.TextAreaFor(m => m.Output, new { @class = "form-control", @id = "output", @rows = "10", @style = "font-family:calibri;" })
            </div>
        </div>
        <div class="col-auto mr-auto">
            <div class="form-group">
                <button type="button" class="btn btn-success" id="refresh">Refresh Preview</button>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">

                <button type="button" class="btn btn-dark" id="copy">Copy</button>

            </div>
        </div>
        <div class="col-12" style="min-height: 3rem;text-align:right;">
            <p class="copied"></p>
        </div>
    </div>

</div>


<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <h4>Preview</h4>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="preview">
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
