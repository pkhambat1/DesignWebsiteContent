@model DesignWebsiteContent.Models.InputOutput

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h2>Home</h2>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Input.ThumbnailSlidePair.Thumbnail)
                @Html.TextBoxFor(m => m.Input.ThumbnailSlidePair.Thumbnail, new { @class = "form-control", @id = "thumbnail" })

            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Input.ThumbnailSlidePair.TitleBox.Title)
                @Html.TextBoxFor(m => m.Input.ThumbnailSlidePair.TitleBox.Title, new { @class = "form-control", @id = "title" })

                @Html.LabelFor(m => m.Input.ThumbnailSlidePair.TitleBox.Caption)
                @Html.TextBoxFor(m => m.Input.ThumbnailSlidePair.TitleBox.Caption, new { @class = "form-control", @id = "caption" })
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Input.ThumbnailSlidePair.TitleBox.Title)
                @Html.TextBoxFor(m => m.Input.ThumbnailSlidePair.TitleBox.Title, new { @class = "form-control", @id = "title" })

                @Html.LabelFor(m => m.Input.ThumbnailSlidePair.TitleBox.Caption)
                @Html.TextBoxFor(m => m.Input.ThumbnailSlidePair.TitleBox.Caption, new { @class = "form-control", @id = "caption" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <button type="button" class="btn btn-success" id="convert">Convert</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Output)
                @Html.TextAreaFor(m => m.Output, new { @class = "form-control allowcopy", @id = "output", @rows = "10", @cols = "20" })
            </div>
            <div class="form-group" style="min-height:20px;">
                <span class="copied"></span>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-dark" id="copy">Copy</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
