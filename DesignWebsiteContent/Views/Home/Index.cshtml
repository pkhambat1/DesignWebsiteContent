                    <div class="input-group-prepend">
                        <div class="input-group-text">/</div>
                    </div>
                    @Html.TextBoxFor(m => m.ContentCarousel.Slides.FirstOrDefault().RightSlide.Image, new { @class = "form-control image", @disabled = true })
                </div>

                @Html.LabelFor(m => m.ContentCarousel.Slides.FirstOrDefault().RightSlide.TextBoxes.FirstOrDefault().Header)
